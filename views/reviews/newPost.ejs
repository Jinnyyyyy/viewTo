<link rel='stylesheet' href='/stylesheets/review.css' />
<%- include('../base/header') %>
<img src="/images/write2.jpg" id="imageBackground" class="card-action">
    <h1>Write a reviews</h1>
        <form action="/reviews/newPost" method="POST"> 
          <div class="boxallin">
            <div class="name">
              <input type="text" name="name" id="name" placeholder="Name">
            </div>
            <div class="location">
                <input type="text" name="location" id="location" placeholder="Location">
            </div>
              <div class="rate"> 
                <input type="radio" id="star5" name="rate" value="5" />
                <label for="star5" title="text"></label>
                <input type="radio" id="star4" name="rate" value="4" />
                <label for="star4" title="text"></label>
                <input type="radio" id="star3" name="rate" value="3" />
                <label for="star3" title="text"></label>
                <input type="radio" id="star2" name="rate" value="2" />
                <label for="star2" title="text"></label>
                <input type="radio" id="star1" name="rate" value="1" />
                <label for="star1" title="text"></label>
              </div>
            <div class="description">
              <textarea rows="9" cols="50" name="description" type="text" placeholder="Write your review ...."></textarea>
            </div>
          </div>
          <div class ="Postbtn">
            <button type="submit" class="btnReview">Post Reviews</button>
          </div>
        </form>
      </div>
<%- include('../base/footer') %>